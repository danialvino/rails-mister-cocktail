<h1>New ingredient</h1>

<%= simple_form_for [@dose, @ingredient] do |f| %>


  <% if @ingredient.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @ingredient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
